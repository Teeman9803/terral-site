<div class="slab">	
	<section id="portfolio">
	    <div class="row">
	        <div class="twelve columns collapsed">
	            {{ page.content }}
				<div class="mixitup text-center controls">
					<button type="button" class="filter" data-filter="all">All</button>
					<button type="button" class="filter" data-filter=".web-design">Web</button>
					<button type="button" class="filter" data-filter=".print-design">Print</button>
				</div>
	            <div id="portfolio-wrapper" class="bgrid-quarters s-bgrid-thirds cf container">
	                {% for item in page.header.portfolio %}
	                <div class="columns portfolio-item mix {{ item.category }}">
	                    <div class="item-wrap wow flipInX" data-wow-delay=".33s">
	                        <a href="#modal-{{ loop.index }}" title="">
	                            {{ page.media[item.img].cropZoom(215, 215).html() }}
	                            <div class="overlay">
	                                <div class="portfolio-item-meta">
	                                    <h5>{{ item.title }}</h5>
	                                    <p>{{ item.description }}</p>
	                                </div>
	                            </div>
	                            <div class="link-icon"><i class="icon-plus"></i></div>
	                        </a>
	                    </div>
	                </div>
	                {% endfor %}
	            </div>
	        </div>
	        {% for item in page.header.portfolio %}
	        <div id="modal-{{ loop.index }}" class="popup-modal mfp-hide">
	            <img class="scale-with-grid" src="{{ page.media[item.img].url }}" alt="" />
	            <div class="description-box">
	                <h4>{{ item.title }}</h4>
	                <p>{{ item.content }}.</p>
	                <span class="categories"><i class="fa fa-tag"></i>{{ item.tags }}</span>
	            </div>
	            <div class="link-box">
	                <a href="{{ item.details }}">Details</a>
	                <a class="popup-modal-dismiss">Close</a>
	            </div>
	        </div>
	        {% endfor %}
	    </div>
	</section>
</div>