<div class="slab">
	<section id="resume">
	    {% for section in page.header.sections %}
	    <div class="row {{ section.css_class }} wow bounceInUp" data-wow-delay=".33s">
		    {% if section.title %}
		        <div class="twelve columns header-col">
		            <h1><span>{{ section.title }}</span></h1>
		        </div>
		    {% endif %}	        
	        <div class="twelve columns">
	            {% for item in section.items %}
	            <div class="row item">
	                <div class="twelve columns">
	                    {% if item.title %}
	                    <h3>{{ item.title }}</h3>
	                    {% endif %}
	                    {% if item.info or item.date %}
	                    <p class="info">{{ item.info }} <span>&bull;</span> <em class="date">{{ item.date }}</em></p>
	                    {% endif %}
						{% if item.description %}
		                    <p>
		                        {{ item.description }}
		                    </p>
						{% endif %}
	                    {% if item.skills %}
	                    <div class="bars">
	                        <ul class="skills">
	                            {% for skill in item.skills %}
	                            <li><span class="bar-expand" style="width: {{ skill.level }}%;animation: {{ skill.name|lower }} 2s ease;"></span><em>{{ skill.name }}</em></li>
	                            {% endfor %}
	                        </ul>
	                    </div>
	                    {% endif %}
	
	                </div>
	            </div>
	            {% endfor %}
	        </div>
	    </div>
	    {% endfor %}
	</section>
</div>
